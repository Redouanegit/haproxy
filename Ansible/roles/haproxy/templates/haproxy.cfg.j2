global
    log /dev/log    local0
    log /dev/log    local1 notice
    daemon

defaults
    log     global
    mode    http
    option  httplog
    option  dontlognull
    timeout connect 5s
    timeout client  50s
    timeout server  50s

frontend http-in
    bind *:{{ haproxy_listen_port }}
    default_backend app-backend

backend app-backend
{{ backend_nodes | indent(4) }}